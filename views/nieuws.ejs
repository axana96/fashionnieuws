<% include header %>


<h1 id="terugNaarHome"><a href="/">Home &#10095;</a></h1>
<section>

    <h2 class="titel">
      <%- item.titel %>
    </h2>
    <img src="/img/<%- item.afbeeldingl %>" alt="<%- item.titel %>">

    <p class="datum"><%- item.datum %></p>

    <p>
      <%- item.body %>
    </p>

    <p id="categorie">

      <% for (var i = 0; i < item.categorieen.length; i++) { %>
        <a href="/categorieen/<%- i %>"><%- item.categorieen[i] %></a><% if (i+1< item.categorieen.length){ %>, <% } %>
      <% } %>
    </p>

    <!-- lang gezocht naar afbeelding carousel te maken maar lukte niet dus nu gewoon foto's onder elkaar-->
    <% for (var j=0; j < item.afbeeldingCarousel.length; j++) { %>
      <img src= "/img/<%- item.afbeeldingCarousel[j] %>">
    <% } %>

    <% include comment %>


</section>

<% include footer %>
